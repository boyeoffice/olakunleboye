.skills-charts {
    position: relative;
    width: 80%;
    right: -15%;
    left: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    transform: translateY(0%);
    clear: both;
    overflow: hidden;
    @include md {
      position: absolute;
      left: auto;
      transform: none;
      clear: none;
      height: 100%;
      z-index: 2;
    }
}
#myCanvasContainer {
    position: relative;
    height: auto;
    width: 80%;
    margin: 0 10%;
    top: 0;
    left: 0;
    clear: both;
    @include md {
      height: 100%;
      width: 100%;
    }
}
#myCanvas {
    position: absolute;
    margin: 0;
    width: 100%;
    @include md {
      width: auto;
      margin: auto;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      height: 100%;
    }
}
#myCanvasContainer li a {
    font-size: 30px;
    font-family: font-file-82132;
}