html {
  font-family: 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI',
    Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 16px;
  word-spacing: 1px;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
}
*,
*:before,
*:after {
  box-sizing: border-box;
  text-rendering: optimizeLegibility;
  margin: 0;
}
.content {
  margin-top: 100px;
  @include lg {
    margin-top: 0;
  }
}
p {
  font-size: 14px;
  line-height: 20px;
  margin: 10px 0;
}
canvas {
  display: inline-block;
}
a {
  color: #5e5d5d;
  background-color: transparent;
  text-decoration: none;
}
a:focus {
  outline: none;
}
img {
  vertical-align: middle;
  max-width: 100%;
}
.clear {
  clear: both;
}
.amination-logo {
  animation: animation2 1s linear both;
}
h1 {
  font-size: 47px;
  line-height: 40px;
  @include md {
    font-size: 60px;
    line-height: 53px;
  }
  font-family: font-file-82132;
  font-weight: 400;
  color: $color3;
}
.title {
  font-family: 'Quicksand', 'Source Sans Pro', -apple-system, BlinkMacSystemFont,
    'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  display: block;
  font-weight: 300;
  font-size: 100px;
  color: #35495e;
  letter-spacing: 1px;
}
body {
	background: $color2;
  overflow-x: auto;
  display: block;
  @include md {
    overflow: hidden;
  }
}
.blast:hover {
  color: $color1;
}
.BOYE {
  position: absolute;
  width: 100%;
  height: 100%;
  & .container {
    width: 100%;
    will-change: contents;
    height: auto;
    position: relative;
    margin: 0 auto;
    box-sizing: border-box;
    min-height: 533px;
    top: 5%;
    transform-style: preserve-3d;
    //overflow: hidden;
    z-index: 1;
  }
}

.preloader {
  position: fixed;
  will-change: tranform;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 2;
  overflow: hidden;
  height: 100%;
  width: 100%;
  & .inner {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 400px;
    max-width: 100%;
    height: 160px;
    text-align: center;
    & img {
      display: block;
      margin: 0 auto;
    }
    span {
      color: #8d8d8d;
      margin-top: 9px;
      font-size: 9px;
      letter-spacing: 3px;
      margin-bottom: 30px;
      display: block;
      font-family: "Open Sans", sans-serif;
    }
  }
  & .progress-bar {
    text-align: left;
  }
  & .progress-bar_bg {
    height: 1px;
    background: #047765;
    & div {
      height: 1px;
      background: #08fdd8;
    }
  }
}

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}
.fade-enter, .fade-leave-to {
  opacity: 0;
}
/* Enter and leave animations can use different */
/* durations and timing functions.              */
.slide-fade-enter-active {
  transition: all .3s ease;
}
.slide-fade-leave-active {
  transition: all .8s cubic-bezier(1.0, 0.5, 0.8, 1.0);
}
.slide-fade-enter, .slide-fade-leave-to
/* .slide-fade-leave-active below version 2.1.8 */ {
  transform: translateX(10px);
  opacity: 0;
}

.animation-logo {
  animation: animation2 1s linear both;
  opacity: 1;
}

